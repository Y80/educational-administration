/* miniprogram/pages/main/main.wxss */

.van-notice-bar {
  margin: 1em 0;
}

.cards {
  width: 640rpx;
  padding: 10rpx 55rpx;
  display: flex;
  flex-wrap: wrap;
}

.card {
  margin: 20rpx;
  width: 280rpx;
  height: 280rpx;
  border-radius: 8px;
  color: whitesmoke;
  text-shadow: 1px 1px 3px #112;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-weight: 300;
}

.card-title {
  margin-top: 3px;
  text-shadow: 1px 1px 2px #000;
  color: #fff;
  letter-spacing: 2px;
  font-weight: 500;
}

.footer {
  width: 600rpx;
  height: 130rpx;
  line-height: 130rpx;
  text-align: center;
  margin: 20rpx auto 50px;
  border-radius: 8px;
  background: white;
  color: whitesmoke;
  text-shadow: 1px 1px 4px #112;
  background-image: linear-gradient(to right, #eea2a2 0%, #bbc1bf 19%, #57c6e1 42%, #b49fda 79%, #7ac5d8 100%);
}
