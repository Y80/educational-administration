.content {
  width: 100%;
  margin: 0 auto 25px;
  display: flex;
  flex-direction: column;
  background: white;
}

.item {
  padding: 8px 20px;
  border-bottom: 1rpx solid rgba(221, 221, 221, 0.473);
  font-size: 14px;
}

/* 下面这个可以选择每个 .content 部分中的最后一个 .item */
.item:last-child {
  border: none;
}